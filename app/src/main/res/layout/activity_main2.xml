<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    tools:context=".MainActivity2">

    <!-- TEXTO MENU -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="12dp"/>

    <!-- BOTON LISTA -->
    <Button
        android:id="@+id/btnLista"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Lista"

        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toTopOf="@id/btnDetalles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="12dp"/>

    <!-- BOTON DETALLES -->
    <Button
        android:id="@+id/btnDetalles"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Detalles"

        app:layout_constraintTop_toBottomOf="@id/btnLista"
        app:layout_constraintBottom_toTopOf="@id/btnContacto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="12dp"/>

    <!-- BOTON CONTACTO -->
    <Button
        android:id="@+id/btnContacto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Contacto"

        app:layout_constraintTop_toBottomOf="@id/btnDetalles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>







